{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist"
    },
    "ts-node": {
        "esm": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}